---
---
{
    "domains": [
        {% for domain in site.data.domains %}
        {
            "name": "{{ domain.name }}",
            "id": "{{ domain.id }}",
            "modules": [
                {% for module in site.data.modules[domain.id].modules %}
                {
                    "name": "{{ module.name }}",
                    "id": "{{ module.id }}",
                    "domain": "{{ domain.id }}",
                    "rel": [{% for r in module.rel %}"{{ r }}"{% unless forloop.last %},{% endunless %}{% endfor %}],
                    "url": "{{ site.url }}/domains/{{ domain.id }}/modules/{{ module.id }}.html"
                }{% unless forloop.last %},{% endunless %}
                {% endfor %}
            ]
        }{% unless forloop.last %},{% endunless %}
        {% endfor %}
    ]
}
